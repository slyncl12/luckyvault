import { ConnectButton, useCurrentAccount, useSignAndExecuteTransaction, useSuiClient } from '@mysten/dapp-kit'
import { Transaction } from '@mysten/sui/transactions'
import { useState, useEffect } from 'react'
import { SuilendStats } from './components/SuilendStats'
import { AdminPanel } from './components/AdminPanel';

// ============ MAINNET ADDRESSES ============
const PACKAGE_ID = '0xb5820826bc46a45695491c22494a34efce94da6fcc1860e022b872bfcce7719f'
const POOL_ID = '0x6b2a36825d8feb66c1e25fa85fbcff3d78ff8b54bb26add86117dcff19d88b0c'
const USDC_TYPE = '0xdba34672e30cb065b1f93e3ab55318768fd6fef66c15942c9f7cb846e2f900e7::usdc::USDC'
const CLOCK_ID = '0x6' // Sui Clock object

function App() {
  const client = useSuiClient()
  const account = useCurrentAccount()
  const { mutate: signAndExecute } = useSignAndExecuteTransaction()

  const [poolData, setPoolData] = useState(null)
  const [userUSDC, setUserUSDC] = useState([])
  const [userSUI, setUserSUI] = useState('0')
  const [userTickets, setUserTickets] = useState([])
  const [depositAmount, setDepositAmount] = useState('')
  const [loading, setLoading] = useState(false)
  const [status, setStatus] = useState('')

  // Fetch pool data
  const fetchPoolData = async () => {
    try {
      const poolObject = await client.getObject({
        id: POOL_ID,
        options: { showContent: true }
      })

      if (poolObject.data?.content?.dataType === 'moveObject') {
        const fields = poolObject.data.content.fields
        setPoolData({
          balance: fields.balance || '0',
          totalDeposited: fields.total_deposited || '0',
          paused: fields.paused || false,
          whitelistSize: fields.whitelist?.fields?.contents?.length || 0
        })
      }
    } catch (error) {
      console.error('Error fetching pool:', error)
    }
  }

  // Fetch user's SUI balance
  const fetchUserSUI = async () => {
    if (!account) return

    try {
      const balance = await client.getBalance({
        owner: account.address,
        coinType: '0x2::sui::SUI'
      })
      setUserSUI(balance.totalBalance)
    } catch (error) {
      console.error('Error fetching SUI:', error)
    }
  }

  // Fetch user's USDC coins
  const fetchUserUSDC = async () => {
    if (!account) return

    try {
      const coins = await client.getCoins({
        owner: account.address,
        coinType: USDC_TYPE
      })
      setUserUSDC(coins.data)
    } catch (error) {
      console.error('Error fetching USDC:', error)
    }
  }

  // Fetch user's tickets
  const fetchUserTickets = async () => {
    if (!account) return

    try {
      const objects = await client.getOwnedObjects({
        owner: account.address,
        filter: {
          StructType: `${PACKAGE_ID}::lottery_personal::Ticket`
        },
        options: { showContent: true }
      })
      setUserTickets(objects.data.filter(obj => obj.data))
    } catch (error) {
      console.error('Error fetching tickets:', error)
    }
  }

  useEffect(() => {
    fetchPoolData()
    const interval = setInterval(fetchPoolData, 10000)
    return () => clearInterval(interval)
  }, [])

  useEffect(() => {
    if (account) {
      fetchUserUSDC()
      fetchUserSUI()
      fetchUserTickets()
    }
  }, [account])

  // Calculate total USDC balance
  const totalUSDC = userUSDC.reduce((sum, coin) => sum + parseInt(coin.balance), 0)

  // Deposit USDC to pool
  const handleDeposit = async () => {
    if (!account || !depositAmount || userUSDC.length === 0) return

    setLoading(true)
    setStatus('Depositing to LuckyVault...')

    try {
      const tx = new Transaction()
      const amount = Math.floor(parseFloat(depositAmount) * 1_000_000) // Convert to 6 decimals

      // Find a USDC coin with enough balance or merge coins
      let usdcCoin = userUSDC.find(coin => parseInt(coin.balance) >= amount)

      if (!usdcCoin) {
        // Merge all USDC coins if no single coin has enough
        const [firstCoin, ...restCoins] = userUSDC
        if (restCoins.length > 0) {
          tx.mergeCoins(
            tx.object(firstCoin.coinObjectId),
            restCoins.map(coin => tx.object(coin.coinObjectId))
          )
        }
        usdcCoin = firstCoin
      }

      // Split the exact amount
      const [coin] = tx.splitCoins(tx.object(usdcCoin.coinObjectId), [amount])

      // Call deposit - returns Ticket
      const [ticket] = tx.moveCall({
        target: `${PACKAGE_ID}::lottery_personal::deposit`,
        typeArguments: [USDC_TYPE],
        arguments: [
          tx.object(POOL_ID),
          coin,
          tx.object(CLOCK_ID)
        ],
      })

      // Transfer ticket to user
      tx.transferObjects([ticket], account.address)

      signAndExecute(
        { transaction: tx },
        {
          onSuccess: async (result) => {
            console.log('Deposit successful:', result)
            setStatus('âœ… Success! You got a lottery ticket!')
            setDepositAmount('')
            setTimeout(() => {
              fetchPoolData()
              fetchUserUSDC()
              fetchUserSUI()
              fetchUserTickets()
              setLoading(false)
            }, 2000)
          },
          onError: (error) => {
            console.error('Deposit failed:', error)
            setStatus('âŒ Deposit failed: ' + error.message)
            setLoading(false)
          },
        }
      )
    } catch (error) {
      console.error('Error:', error)
      setStatus('âŒ Error: ' + error.message)
      setLoading(false)
    }
  }

  // Withdraw USDC
  const handleWithdraw = async (ticket) => {
    if (!account) return

    setLoading(true)
    setStatus('Withdrawing from LuckyVault...')

    try {
      const tx = new Transaction()

      // Call withdraw - returns USDC coin
      const [withdrawnCoin] = tx.moveCall({
        target: `${PACKAGE_ID}::lottery_personal::withdraw`,
        typeArguments: [USDC_TYPE],
        arguments: [
          tx.object(POOL_ID),
          tx.object(ticket.data.objectId),
          tx.object(CLOCK_ID)
        ],
      })

      // Transfer USDC back to user
      tx.transferObjects([withdrawnCoin], account.address)

      signAndExecute(
        { transaction: tx },
        {
          onSuccess: async (result) => {
            console.log('Withdraw successful:', result)
            setStatus('âœ… Withdrawal successful!')
            setTimeout(() => {
              fetchPoolData()
              fetchUserUSDC()
              fetchUserSUI()
              fetchUserTickets()
              setLoading(false)
            }, 2000)
          },
          onError: (error) => {
            console.error('Withdraw failed:', error)
            setStatus('âŒ Withdraw failed: ' + error.message)
            setLoading(false)
          },
        }
      )
    } catch (error) {
      console.error('Error:', error)
      setStatus('âŒ Error: ' + error.message)
      setLoading(false)
    }
  }

  return (
    <div style={{
      minHeight: '100vh',
      background: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)',
      padding: '40px 20px',
      fontFamily: 'system-ui, -apple-system, sans-serif'
    }}>
      <div style={{ maxWidth: '1000px', margin: '0 auto' }}>
        {/* Header */}
        <div style={{ textAlign: 'center', marginBottom: '40px' }}>
          <h1 style={{
            fontSize: '56px',
            color: 'white',
            margin: '0 0 10px 0',
            textShadow: '2px 2px 4px rgba(0,0,0,0.3)',
            fontWeight: 'bold'
          }}>
            ğŸ° LuckyVault
          </h1>
          <p style={{
            fontSize: '24px',
            color: 'rgba(255,255,255,0.95)',
            margin: '0 0 20px 0',
            fontWeight: '500'
          }}>
            The No-Loss Lottery on Sui
          </p>
          <div style={{
            background: 'rgba(255,255,255,0.25)',
            padding: '16px 32px',
            borderRadius: '12px',
            display: 'inline-block',
            backdropFilter: 'blur(10px)',
            border: '1px solid rgba(255,255,255,0.3)'
          }}>
            <p style={{ margin: 0, color: 'white', fontSize: '16px', fontWeight: '600' }}>
              âœ¨ Whitelist-Only Testing â€¢ Mainnet
            </p>
          </div>
        </div>

        {/* Connect Button */}
        <div style={{ textAlign: 'center', marginBottom: '40px' }}>
          <ConnectButton />
        </div>

        {/* Admin Panel - Only show for admin */}
        {account?.address === '0x01efafa2098e9cf9f89dfd16c11e07a05f89d4d745a466369aee195ae7d9acb4' && (
          <AdminPanel 
            isPaused={poolData?.paused || false}
            onSuccess={() => {
              fetchPoolData();
            }}
          />
        )}

        {/* Pause Status Banner */}
        {poolData?.paused && (
          <div style={{
            background: 'linear-gradient(135deg, #ef4444 0%, #dc2626 100%)',
            borderRadius: '16px',
            padding: '24px',
            marginBottom: '30px',
            boxShadow: '0 8px 24px rgba(239, 68, 68, 0.4)',
            textAlign: 'center',
            color: 'white'
          }}>
            <div style={{ fontSize: '48px', marginBottom: '12px' }}>â¸ï¸</div>
            <div style={{ fontSize: '24px', fontWeight: 'bold', marginBottom: '8px' }}>
              Pool is Paused
            </div>
            <div style={{ fontSize: '16px', opacity: 0.9 }}>
              New deposits are temporarily disabled. Withdrawals still work!
            </div>
          </div>
        )}

        {/* User Balance */}
        {account && (
          <div style={{
            background: 'white',
            borderRadius: '20px',
            padding: '30px',
            marginBottom: '30px',
            boxShadow: '0 20px 60px rgba(0,0,0,0.15)'
          }}>
            <h2 style={{ marginTop: 0, color: '#333', fontSize: '28px', marginBottom: '20px' }}>ğŸ’° Your Balance</h2>

            <div style={{ display: 'grid', gridTemplateColumns: '1fr 1fr', gap: '20px', marginBottom: '20px' }}>
              <div style={{
                background: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)',
                padding: '20px',
                borderRadius: '16px',
                color: 'white'
              }}>
                <div style={{ fontSize: '14px', opacity: 0.9, marginBottom: '8px' }}>ğŸ’ SUI (Gas)</div>
                <div style={{ fontSize: '28px', fontWeight: 'bold' }}>
                  {(parseFloat(userSUI) / 1_000_000_000).toFixed(4)} SUI
                </div>
              </div>

              <div style={{
                background: 'linear-gradient(135deg, #10b981 0%, #059669 100%)',
                padding: '20px',
                borderRadius: '16px',
                color: 'white'
              }}>
                <div style={{ fontSize: '14px', opacity: 0.9, marginBottom: '8px' }}>ğŸ’µ USDC</div>
                <div style={{ fontSize: '28px', fontWeight: 'bold' }}>
                  {(totalUSDC / 1_000_000).toFixed(6)} USDC
                </div>
              </div>
            </div>

            <div style={{
              fontSize: '16px',
              color: '#666',
              padding: '16px',
              background: '#f3f4f6',
              borderRadius: '12px',
              display: 'flex',
              justifyContent: 'space-between',
              alignItems: 'center'
            }}>
              <span>ğŸ« Lottery Tickets</span>
              <span style={{ fontWeight: 'bold', color: '#667eea', fontSize: '20px' }}>
                {userTickets.length}
              </span>
            </div>
          </div>
        )}

        {/* Pool Stats */}
        <div style={{
          background: 'white',
          borderRadius: '20px',
          padding: '40px',
          marginBottom: '30px',
          boxShadow: '0 20px 60px rgba(0,0,0,0.15)'
        }}>
          <h2 style={{ marginTop: 0, color: '#333', fontSize: '32px', marginBottom: '30px' }}>
            ğŸ“Š Pool Statistics
          </h2>
          <div style={{
            display: 'grid',
            gridTemplateColumns: 'repeat(auto-fit, minmax(220px, 1fr))',
            gap: '24px'
          }}>
            <div style={{
              background: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)',
              padding: '24px',
              borderRadius: '16px',
              textAlign: 'center',
              color: 'white',
              boxShadow: '0 8px 24px rgba(102, 126, 234, 0.4)'
            }}>
              <div style={{ fontSize: '14px', opacity: 0.9, marginBottom: '8px', fontWeight: '600' }}>
                ğŸ’° Pool Balance
              </div>
              <div style={{ fontSize: '32px', fontWeight: 'bold' }}>
                {poolData ? (parseFloat(poolData.balance) / 1_000_000).toFixed(2) : '0.00'} USDC
              </div>
            </div>

            <div style={{
              background: 'linear-gradient(135deg, #10b981 0%, #059669 100%)',
              padding: '24px',
              borderRadius: '16px',
              textAlign: 'center',
              color: 'white',
              boxShadow: '0 8px 24px rgba(16, 185, 129, 0.4)'
            }}>
              <div style={{ fontSize: '14px', opacity: 0.9, marginBottom: '8px', fontWeight: '600' }}>
                ğŸ“ˆ Total Deposited
              </div>
              <div style={{ fontSize: '32px', fontWeight: 'bold' }}>
                {poolData ? (parseFloat(poolData.totalDeposited) / 1_000_000).toFixed(2) : '0.00'} USDC
              </div>
            </div>

            <div style={{
              background: 'linear-gradient(135deg, #f59e0b 0%, #d97706 100%)',
              padding: '24px',
              borderRadius: '16px',
              textAlign: 'center',
              color: 'white',
              boxShadow: '0 8px 24px rgba(245, 158, 11, 0.4)'
            }}>
              <div style={{ fontSize: '14px', opacity: 0.9, marginBottom: '8px', fontWeight: '600' }}>
                ğŸ‘¥ Whitelist
              </div>
              <div style={{ fontSize: '32px', fontWeight: 'bold' }}>
                {poolData ? poolData.whitelistSize : '0'} addresses
              </div>
            </div>

            <div style={{
              background: poolData?.paused ? 'linear-gradient(135deg, #ef4444 0%, #dc2626 100%)' : 'linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%)',
              padding: '24px',
              borderRadius: '16px',
              textAlign: 'center',
              color: 'white',
              boxShadow: '0 8px 24px rgba(139, 92, 246, 0.4)'
            }}>
              <div style={{ fontSize: '14px', opacity: 0.9, marginBottom: '8px', fontWeight: '600' }}>
                âš¡ Status
              </div>
              <div style={{ fontSize: '32px', fontWeight: 'bold' }}>
                {poolData?.paused ? 'â¸ï¸ Paused' : 'âœ… Active'}
              </div>
            </div>
          </div>
        </div>

        {/* Suilend Yield Stats */}
        <div style={{ marginBottom: '30px' }}>
          <SuilendStats
            userAddress={account?.address}
            refreshInterval={30000}
          />
        </div>

        {/* Deposit Section */}
        {account && totalUSDC > 0 && (
          <div style={{
            background: 'white',
            borderRadius: '20px',
            padding: '40px',
            marginBottom: '30px',
            boxShadow: '0 20px 60px rgba(0,0,0,0.15)'
          }}>
            <h2 style={{ marginTop: 0, color: '#333', fontSize: '32px' }}>ğŸ’° Deposit USDC</h2>
            <p style={{ color: '#666', marginBottom: '20px', fontSize: '16px' }}>
              Deposit USDC to enter the no-loss lottery! (Whitelist-only)
            </p>

            <div style={{ marginBottom: '20px' }}>
              <input
                type="number"
                step="0.000001"
                placeholder="Amount (USDC)"
                value={depositAmount}
                onChange={(e) => setDepositAmount(e.target.value)}
                style={{
                  width: '100%',
                  padding: '16px',
                  fontSize: '18px',
                  border: '2px solid #e5e7eb',
                  borderRadius: '12px',
                  boxSizing: 'border-box'
                }}
              />
              <div style={{ fontSize: '14px', color: '#666', marginTop: '8px' }}>
                Available: {(totalUSDC / 1_000_000).toFixed(6)} USDC â€¢ Max: 100 USDC
              </div>
            </div>

            <button
              onClick={handleDeposit}
              disabled={loading || !depositAmount || parseFloat(depositAmount) <= 0 || poolData?.paused}
              style={{
                width: '100%',
                padding: '18px',
                fontSize: '20px',
                fontWeight: 'bold',
                color: 'white',
                background: (loading || poolData?.paused) ? '#9ca3af' : 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)',
                border: 'none',
                borderRadius: '12px',
                cursor: (loading || poolData?.paused) ? 'not-allowed' : 'pointer',
                transition: 'transform 0.2s',
              }}
              onMouseEnter={(e) => !(loading || poolData?.paused) && (e.target.style.transform = 'translateY(-2px)')}
              onMouseLeave={(e) => e.target.style.transform = 'translateY(0)'}
            >
              {loading ? 'â³ Processing...' : poolData?.paused ? 'â¸ï¸ Pool Paused' : 'ğŸ² Deposit & Get Ticket'}
            </button>
          </div>
        )}

        {/* Tickets Section */}
        {account && userTickets.length > 0 && (
          <div style={{
            background: 'white',
            borderRadius: '20px',
            padding: '40px',
            marginBottom: '30px',
            boxShadow: '0 20px 60px rgba(0,0,0,0.15)'
          }}>
            <h2 style={{ marginTop: 0, color: '#333', fontSize: '32px' }}>ğŸ« Your Tickets</h2>
            <div style={{ display: 'grid', gap: '16px' }}>
              {userTickets.map((ticket, index) => {
                const ticketData = ticket.data?.content?.fields
                const amount = ticketData?.amount || '0'
                return (
                  <div key={ticket.data.objectId} style={{
                    background: 'linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%)',
                    padding: '20px',
                    borderRadius: '12px',
                    display: 'flex',
                    justifyContent: 'space-between',
                    alignItems: 'center'
                  }}>
                    <div>
                      <div style={{ fontSize: '20px', fontWeight: 'bold', color: '#333' }}>
                        ğŸ’° {(parseFloat(amount) / 1_000_000).toFixed(6)} USDC
                      </div>
                      <div style={{ fontSize: '14px', color: '#666', marginTop: '4px' }}>
                        Ticket #{index + 1} â€¢ ID: {ticket.data.objectId.slice(0, 8)}...
                      </div>
                    </div>
                    <button
                      onClick={() => handleWithdraw(ticket)}
                      disabled={loading}
                      style={{
                        padding: '12px 24px',
                        fontSize: '16px',
                        fontWeight: 'bold',
                        color: 'white',
                        background: loading ? '#9ca3af' : 'linear-gradient(135deg, #ef4444 0%, #dc2626 100%)',
                        border: 'none',
                        borderRadius: '8px',
                        cursor: loading ? 'not-allowed' : 'pointer'
                      }}
                    >
                      ğŸ’¸ Withdraw
                    </button>
                  </div>
                )
              })}
            </div>
          </div>
        )}

        {/* Status Messages */}
        {status && (
          <div style={{
            background: 'white',
            borderRadius: '16px',
            padding: '20px',
            marginBottom: '30px',
            boxShadow: '0 8px 24px rgba(0,0,0,0.1)'
          }}>
            <div style={{
              padding: '16px',
              background: status.includes('âŒ') ? '#fee2e2' : '#d1fae5',
              color: status.includes('âŒ') ? '#991b1b' : '#065f46',
              borderRadius: '12px',
              fontSize: '16px',
              fontWeight: '500'
            }}>
              {status}
            </div>
          </div>
        )}

        {/* How It Works */}
        <div style={{
          background: 'rgba(255,255,255,0.95)',
          borderRadius: '20px',
          padding: '40px',
          boxShadow: '0 20px 60px rgba(0,0,0,0.15)'
        }}>
          <h2 style={{ marginTop: 0, color: '#333', fontSize: '32px', marginBottom: '30px' }}>
            ğŸ¯ How LuckyVault Works
          </h2>

          <div style={{ display: 'grid', gap: '24px' }}>
            <div style={{
              background: 'linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%)',
              padding: '24px',
              borderRadius: '16px',
              border: '2px solid #667eea'
            }}>
              <div style={{ fontSize: '24px', marginBottom: '12px' }}>ğŸ’° 1. Deposit USDC</div>
              <div style={{ color: '#666', fontSize: '16px', lineHeight: '1.6' }}>
                Deposit USDC and get a Ticket NFT. Your money stays safe!
              </div>
            </div>

            <div style={{
              background: 'linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%)',
              padding: '24px',
              borderRadius: '16px',
              border: '2px solid #10b981'
            }}>
              <div style={{ fontSize: '24px', marginBottom: '12px' }}>ğŸ“ˆ 2. Earn Yield</div>
              <div style={{ color: '#666', fontSize: '16px', lineHeight: '1.6' }}>
                Your USDC earns yield on Suilend automatically.
              </div>
            </div>

            <div style={{
              background: 'linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%)',
              padding: '24px',
              borderRadius: '16px',
              border: '2px solid #f59e0b'
            }}>
              <div style={{ fontSize: '24px', marginBottom: '12px' }}>ğŸ² 3. Weekly Draw</div>
